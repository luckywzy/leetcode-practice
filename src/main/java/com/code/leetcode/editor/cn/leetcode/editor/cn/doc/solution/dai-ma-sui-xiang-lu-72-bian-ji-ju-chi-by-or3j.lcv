impl Solution {
    pub fn min_distance(word1: String, word2: String) -> i32 {
        let mut dp = vec![0; word1.len() + 1];
        for (i, v) in dp.iter_mut().enumerate().skip(1) {
            *v = i;
        }

        for char2 in word2.chars() {
            // ç›¸å½“äº dp[i][0] çš„åˆå§‹åŒ–
